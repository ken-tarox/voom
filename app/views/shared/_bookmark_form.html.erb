<% if logged_in? %>
<div class="subumit-btn-bg">
<% if current_user.bookmarks.find_by(onsenpost_id: @onsenpost.id) %>
<%= form_with(model:[@onsenpost,@bookmark], method: :delete, local: true) do |f|  %>
  <div><%= f.hidden_field :onsenpost_id, value: @onsenpost.id %></div>
<%= f.submit "お気に入りを解除", class: "btn-submit-bl" %>
<% end %>
<% else %>
<%= form_with(model:[@onsenpost,@bookmark], method: :post, local: true) do |f|  %>
  <div><%= f.hidden_field :onsenpost_id, value: @onsenpost.id %></div>
<%= f.submit "お気に入りに追加", class: "btn-submit-bl" %>
<% end %>
<% end %>
</div>
<% end %>
