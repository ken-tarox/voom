<div class="user-detail-bg">
  <div class="user-detail">
    <div class="prof-img">
      <% if current_user.picture.present? %>
      <%= image_tag current_user.picture.thumb200.url%>
      <% else %>
      <%= image_tag "avatar200.jpg" %>
      <% end %>
    </div>
    <div class="user-detail-inner">
      <h1><%= current_user.name %></h1>
      <span>My温泉 <%= current_user.onsenposts.count %>件</span>
      <span>お気に入り温泉 <%= current_user.bookmarks.count %>件</span>
    </div>
  </div>
  
  <div class="user-prof-link">
    <%= link_to "プロフィールを見る", current_user %>
  </div>
</div>
