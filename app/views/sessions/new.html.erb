<% provide(:title, "ログイン") %>
<div class="i-s-row">
  <div class="i-s-box col-md-8 col-md-offset-2">
    <h1>ログイン</h1>
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-list">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-list">
      <%= f.label :パスワード %>
      <%= link_to "(パスワードをお忘れですか？)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>
      </div>
      <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
        <span>このコンピュータにログイン情報を保存</span>
      <% end %>
      <div class="form-list">
      <%= f.submit "ログイン", class: "submit" %>
      </div>
    <% end %>
    <div class="form-list">
    <p class="form-list-tex">このサイトの訪問は初めてですか？</p><%= link_to "ユーザー登録", signup_path, class: "btn-submit-bl-sub" %>
    </div>
  </div>
</div>
